@model ShoppingCart
<h2>Your Cart</h2>
<table>
    <tr>
        <td>Course</td>
        <td>Quantity</td>
        <td>Price</td>
        <td>Total</td>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@(item.Price * item.Quantity)</td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-courseId="@item.CourseId">Remove</a>
            </td>
        </tr>
    }
</table>

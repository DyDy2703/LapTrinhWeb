@model DinhVanHoangDuy_2180609183.Models.Course

@{
    ViewData["Title"] = "Display Course";
}

<h2>@Model.Name</h2>

<div class="container mt-4">
    <h2 class="fw-bold">Chi tiết sản phẩm</h2>
    <h5 class="text-secondary">@Model.Name</h5>
    
    <div class="row mt-4">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Course Image" style="max-width:200px;" />
            }
            else
            {
                <p>No image available</p>
            }
            
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-8">
            <table class="table">
                <tr>
                    <th>Giá:</th>
                    <td>@Model.Price.ToString("N0")đ</td>
                </tr>
                <tr>
                    <th>Mô tả:</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th>Loại:</th>
                    <td>@Model.Subject.Name</td>
                </tr>
            </table>


        </div>
    </div>
</div>
